<h2>Register Your Band!</h2>

<form action="<%=bands_url%>" method="post">
  <%=auth_token%>
  <label for="band_name">Band Name:</label>
  <input id="band_name" type="text" name="band[name]">

  <input type="submit" value="Add Band">

  <br><br>
  <a href="<%=bands_url%>">See all bands!</a>
  <% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
   <%= error %><br />
  <% end %>
<% end %>
</form>